<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 	

	  <!-- 내가 사용하고자 하는것들을 여기에 넣음 pom.xml 은 범용적-->

	<bean id="umdao" class="com.kbstar.dao.ProductDAO"></bean>
	<bean id="uservice" class="com.kbstar.service.ProductService">   <!--userservice는 dao를 이용하겠다고 정의를 내림-->
		<constructor-arg name="dao" ref="umdao"></constructor-arg>
	</bean>


</beans>





